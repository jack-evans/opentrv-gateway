{
  "name": "opentrv-gateway",
  "version": "1.0.0",
  "description": "gateway that interfaces with the devices, the boiler controller and the web interface",
  "main": "index.js",
  "repository": "https://github.com/jack-evans/opentrv-gateway",
  "author": "Jack Evans",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "jest": "^22.1.3",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "express": "^4.16.2",
    "jsonfile": "^4.0.0",
    "jsonschema": "^1.2.4",
    "moment": "^2.22.0",
    "node-cron": "^1.2.1",
    "request-promise": "^4.2.2",
    "uuid": "^3.2.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/test/**/*-test.js"
    ]
  },
  "scripts": {
    "start": "node server.js",
    "lint": "standard --verbose | snazzy"
  },
  "standard": {
    "env": [
      "jest",
      "node"
    ]
  }
}
